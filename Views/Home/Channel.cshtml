@model GalloTube.Models.Channel
@{
    ViewData["Title"] = "Channel";
}
<style>
    .channel-tabs {
        width: 100%;
        height: 40px;
    }

    .tablink {
        float: left;
        border: none;
        outline: none;
        cursor: pointer;
        padding: 10px 15px;
        font-size: 14px;
        font-weight: 600;
        width: 20%;
        height: 100%;
        background-color: #f9f9f9;
    }

    .tablink:hover {
        color: rgb(54, 54, 54);
    }

    /* Style the tab content (and add height:100% for full page content) */
    .tabcontent {
        background-color: #f0f0f0;
        color: black;
        display: none;
        padding: 10px 0;
    }
</style>

<div class="channel-container">
    <img class="banner" src="@Url.Content(Model.Banner)" alt="@Model.Name" />
    <div class="container" style="background-color: #f9f9f9;">
        <div class="channel-info">
            <img src="@Url.Content(Model.ChannelPicture)" alt="@Model.Name">
            <div>
                <p>@Model.Name</p>
                <span>123 mil inscritos </span>
            </div>
            <button>INSCREVER-SE</button>
        </div>
        <div class="channel-tabs">
            <button class="tablink" onclick="openPage('tabVideos', this, 'green')" id="defaultOpen">V√çDEOS</button>
            <button class="tablink" onclick="openPage('tabPlaylists', this, 'blue')">PLAYLISTS</button>
            <button class="tablink" onclick="openPage('tabCommunity', this, 'orange')">COMUNIDADE</button>
            <button class="tablink" onclick="openPage('tabChannels', this, 'orange')">CANAIS</button>
            <button class="tablink" onclick="openPage('tabAbout', this, 'orange')">SOBRE</button>
        </div>
    </div>
    <div class="container" style="background-color: #f0f0f0; height:100%">
        <div id="tabVideos" class="tabcontent">
            <h3>Videos</h3>
            <p>Some news this fine day!</p>
        </div>
        <div id="tabPlaylists" class="tabcontent">
            <h3>Playlist</h3>
            <p>Get in touch, or swing by for a cup of coffee.</p>
        </div>
        <div id="tabCommunity" class="tabcontent">
            <h3>Community</h3>
            <p>Who we are and what we do.</p>
        </div>
        <div id="tabChannels" class="tabcontent">
            <h3>Channels</h3>
            <p>Home is where the heart is..</p>
        </div>
        <div id="tabAbout" class="tabcontent">
            <h3>About</h3>
            <p>Home is where the heart is..</p>
        </div>
    </div>
</div>

@section Scripts {
<script src="~/js/channel.js"></script>

<script>
    function openPage(pageName, elmnt, color) {
        var i, tabcontent, tablinks;
        tabcontent = document.getElementsByClassName("tabcontent");
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }
        tablinks = document.getElementsByClassName("tablink");
        for (i = 0; i < tablinks.length; i++) {
            tablinks[i].style.backgroundColor = "";
        }
        document.getElementById(pageName).style.display = "block";
        elmnt.style.backgroundColor = "#f0f0f0";
    }
    // Get the element with id="defaultOpen" and click on it
    document.getElementById("defaultOpen").click();
</script>
}
